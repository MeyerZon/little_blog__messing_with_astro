---
import "../styles/global.css";
import BaseLayout from "../layouts/BaseLayout.astro";

const pageTitle = "About Me";
const identity = {
  firstName: "Yonathan",
  country: "Israel",
  occupation: "frontend developer",
  hobbies: ["3D Modeling", "Video games", "Table-Top Games"],
};

const skills = ["HTML", "CSS", "JavaScript", "React", "Astro", "Writing Docs"];

const happy = true;
const finished = false;
const goal = 3;

const skillColor = "navy"; // 1. Creating variable
const fontWeight = "bold";
const textCase = "uppercase";
---

<BaseLayout pageTitle={pageTitle}>
  <style define:vars={{skillColor, fontWeight, textCase}}> /*2. Define variable as style*/
  h1 {
    color: purple;
    font-size: 4rem;
  }

  .skill {

    color: var(--skillColor); /*it doesn't webstorm doesn't see it*/
    font-weight: var(--fontWeight);
    text-transform: var(--textCase);

  }
  </style>


  <h2>Hello! My name is {identity.firstName}!</h2>
  <p>I live in {identity.country} and I work as a {identity.occupation}.</p>
  {
    identity.hobbies.length >= 2 && (
      <li>
        Two of my hobbies are: {identity.hobbies[0]} and {identity.hobbies[1]}
      </li>
    )
  }
  <p>This is my little blog about everything and nothing</p>

  <p>My skills are:</p>
  <ul>
    {skills.map((skill) => <li class="skill">{skill}</li>)}
  </ul>

  {happy && <p>I am happy to be learning Astro!</p>}

  {finished && <p>I finished this tutorial!</p>}

  {
    goal === 3 ? (
      <p>My goal is to finish in 3 days.</p>
    ) : (
      <p>My goal is not 3 days.</p>
    )
  }
</BaseLayout>
